                    {# ここに↑メニュー追加していく #}
                    <li class="nav-item">
                        <a class="nav-link" href="/logout/">ログアウト</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/resign/">退会</a>
                    </li>


                {% endif %}
            </ul>
            {# ログインしてたらユーザー名を出力する#}
            {% if session.user_info.name %}
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link" href="/item/list/{{ session.user_info.user_id }}">{{ session.user_info.name }}さん</a>
                    </li>
                </ul>
            {% endif %}
        </div><!-- /.navbar-collapse -->
